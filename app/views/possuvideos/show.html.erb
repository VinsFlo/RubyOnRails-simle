<div id="ytplayer"></div>

<script>

  var tag = document.createElement('script');
  tag.src = "https://www.youtube.com/player_api";
  var firstScriptTag = document.getElementsByTagName('script')[0];
  firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

  var player;
  function onYouTubePlayerAPIReady() {
    player = new YT.Player('ytplayer', {
      height: '360',
      width: '100%',
      videoId: '<%= @possuvideo.video %>'
    });
  }
</script>

<div class="card mb-3" >
  <div class="row g-0">
    <div class="col-md-4">
      <%= image_tag @possuvideo.image, class: "card-img"  %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= @possuvideo.tittle %></h5>
		<% (1..@possuvideo.star).each do %>
			<i class="fas fa-star"></i>
		<% end %>
        <p class="card-text"><%= @possuvideo.description  %></p>
      </div>
    </div>
  </div>
</div>