<p id="notice"><%= notice %></p>

<h1>Possuvideos</h1>

<%= link_to 'Загрузить нового опоссума', new_possuvideo_path, class:"btn btn-primary" %>

<table class:"table table-bordless">
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @possuvideos.each do |possuvideo| %>
      <tr>
		<td><%= link_to possuvideo.tittle, possuvideo %></td>
        <td>
			<%= link_to edit_possuvideo_path(possuvideo) do %>
				<i class="fas fa-pen"></i>
				<% end %>	
		</td>
		<td>		
            <%= link_to possuvideo, method: :delete, data: { confirm: 'Are you sure?' } do %>
				<i class="fas fa-trash"></i>
				<% end %>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>



