<style>
.card-img-top {
    width: 27vw;
    height: 27vw;
    object-fit: cover;
}
</style>

<br>
<div class="row">
	<% @possuvideos.each do |possuvideo| %>
		<div class="col-sm d-flex">
		<div class: "card card-body flex-fill">
			<%= link_to possuvideo do %>
				<%= image_tag possuvideo.cover, class: "card-img-top"%>
			<% end %>
			<div class: "card-body">
				<h5 class:"card-title" ><%= possuvideo.tittle %></h5>
				<% (1..possuvideo.star_number).each do %>
				<i class="fas fa-star"></i>
				<% end %>
				<p class:"card-text"><%= possuvideo.description %></p>
				</div>
			</div>
		</div>
	<% end %>	
